<% if @activities and @activities.any? -%>
<div class='activities'>
  <ul class='plain'>
    <% @activities.each do |activity| -%>
      <li class="small_icon <%=activity.icon%>_16"><%= expand_links(activity.description) %> <span>(<%= friendly_date(activity.created_at) %>)</span></li>
    <% end -%>
  </ul>
</div>
<% end -%>

