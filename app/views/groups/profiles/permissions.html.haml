= render :partial => '/groups/admin_header'

- content_for :left_sidebar do
  = render :partial => '/groups/navigation/settings_sidelinks'

%section#main-content.no-sidebar
  - form_tag(groups_profiles_params(:action => :permissions), :multipart => false) do
    = render :partial => '/groups/profiles/permissions_form'
