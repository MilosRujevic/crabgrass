= render :partial => '/groups/navigation/header_small'

%nav.no-sidebar
  = render :partial => '/groups/navigation/menu'

%section#main-content.no-sidebar
  = render :partial => '/groups/navigation/settings_tabs'
  - form_tag(groups_path(:action => 'edit', :id => @group), :multipart => true) do
    = render :partial => '/groups/basic/form'
    %p.form_buttons= submit_tag I18n.t(:save_button), :name => 'save'
  - call_hook :group_edit
