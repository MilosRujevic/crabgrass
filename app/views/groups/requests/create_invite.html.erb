<% @title_box = capture do -%>
  <h1><%=h "Send invitations to join {group}"[:send_invites_headline, {:group => @group.display_name}] %></h1>
<% end -%>

<blockquote>
  <p>
    <% if @group.network? %>
      <%= "Enter the names of the groups you would like to invite to join this network."[:network_invite_info] %>
    <% else %>
      <%= "Enter a list of user logins or email addresses of the people you would like to invite to join this {group_type}."[:invite_info, @group.group_type.downcase] %>
    <% end %>
    <br/>
    <i>(<%= "Separate recipients with commas, spaces, or new lines."[:recipient_tip] %>)</i>
  </p>
  <%- form_tag(:controller => 'groups/requests', :action => 'create_invite', :id => @group) do -%>
    <p>
      <%= text_area_tag 'recipients', params[:recipients], :rows => 2, :cols => 50 %>
    </p>
    <!-- <p><%= "Optional message".t%>:<br/>
      <%# text_area_tag 'message', params[:message], :rows => 2, :cols => 50 %>
    </p> -->
    <%= submit_tag 'Send invites'[:send_invites_button], :name => 'send' %>
    <%= submit_tag 'Cancel'[:cancel_button], :name => 'cancel' %>
  <% end -%>
</blockquote>

