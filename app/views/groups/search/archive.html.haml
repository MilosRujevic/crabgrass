= render :partial => 'groups/search/pages_header'

//@info_box = link_line(link_to_active(I18n.t(:archive_filter_created_link), group_search_url(:action => 'archive', :path => @path.replace_keyword('updated','created')), @path.keyword?('created')), link_to_active(I18n.t(:archive_filter_updated_link), group_search_url(:action => 'archive', :path => @path.replace_keyword('created','updated')), @path.keyword?('updated')))

%blockquote
  - unless @months.empty?
    %table.archive_calendar
      %tr
        %td
          &nbsp;
        - '1'.upto('12') do |month|
          %td
            %b
              = month
      - @start_year.upto(@current_year.to_s) do |year|
        %tr
          %td
            %b
              = year
          - '1'.upto('12') do |month|
            %td
              - if month_data = @months.detect {|a| a['year'] == year and a['month'] == month}
                - klass = @path.first_arg_for('date') == "#{year}-#{month}" ? 'invert' : ''
                /* ugly hack with CGI until find out why the url is escaped at their last slash */
                = CGI.unescape(link_to(month_data["page_count"], group_search_url(:action => 'archive', :path => [@field, 'date', "#{year}-#{month}"]), :class => klass))
              - else
                &nbsp;

= list_pages :title => I18n.t(:group_pages)
