<% @title_box = content_tag(:h1, "{thing} settings"[:thing_settings, @group.group_type].titlecase) %>
<%- @info_box_class = 'tabs' -%>
<%- @info_box = capture do -%>
<%= Formy.tabs do |f|
  f.tab do |t|
    t.label 'Basic'
    t.url groups_url(:action => 'edit')
    t.selected controller?(:groups) && action?(:edit)
  end
  f.tab do |t|
    t.label 'Privacy'
    t.url groups_profiles_url(:action => :privacy)
    t.selected controller?('groups/profiles') && action?(:privacy)
  end
  f.tab do |t|
    t.label 'Profile'[:profile]
    t.url groups_profiles_url(:action => :edit)
    t.selected controller?('groups/profiles') && action?(:edit)
  end
  f.tab do |t|
    t.label 'Multimedia'[:page_group_media]
    t.url groups_profiles_url(:action => :media)
    t.selected controller?('groups/profiles') && action?(:media)
  end
end %>
<%- end -%>
