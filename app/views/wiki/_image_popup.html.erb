<% upload_image_form = capture do %>
  <% form_for(:asset, Asset.new(), :url => image_popup_upload_url(wiki), :html => {:multipart => true, :target => 'upload_frame'}) do |f| -%>
     <%= f.file_field 'uploaded_data', :size => '12' %>
     <%= submit_tag 'Upload' %>
     <%= spinner 'upload' %>
  <% end -%>
  <iframe id='upload_frame' name="upload_frame" style="width:1px;height:1px;border:0px" src="about:blank"></iframe>
<% end %>

<div id='<%= image_popup_id(wiki) %>' class='image_popup'>

<%= "Click on an image thumbnail to insert it into the wiki text."[:insert_image_instructions] %>
<%= Formy.form do |f|
  f.row do |r|
    r.label 'Size'
    r.input radio_buttons_tag('image_size', [[:small.t, '0'],[:medium.t,'1'],[:large.t, '2'],[:full.t, '3']], :id => 'image_size-' + wiki.id.to_s)
  end
  f.row do |r|
    r.label 'Options'
    r.input check_box_tag('image_link', "true", false, :id => 'image_link-' + wiki.id.to_s) + "include link to full image"[:include_full_checkbox]
  end
  f.row do |r|
    r.label 'Images'
    r.input popup_image_list(wiki)
  end
  f.row do |r|
    r.label 'New Image'
    r.input upload_image_form
  end
end %>

<div class="buttons">
  <%= close_modal_button %><%= button_to_function 'Insert Image'[:insert_image], "" %>
</div>

</div>

