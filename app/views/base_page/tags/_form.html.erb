<% form_remote_tag(*options_for_edit_tag_form) do -%>

  <blockquote>
    <h2 class="first"><%= 'Current Tags'[:current_tags] %></h2>

    <% if( @page.tags.any? ) %>
      <% @page.tags.sort_by{|t|t.name}.each do |tag| %>
        <%= remove_tag_link( tag ) %>
      <% end %>
    <% else %>
      <p>(<%= "no tags"[:no_tags] %>)</p>
    <% end %>

    <h2><%= 'Add Tags'[:add_tags] %></h2>
    <%= "Add one or more tags, separated by commas"[:add_one_or_more_tags]%>:
    <p>
      <%= text_field_tag( 'add', '', { :size => 20 } ) %>
      <%= submit_tag :add_button.t, :name => 'add' %>
    </p>
  </blockquote>
  
  <div class='buttons'>
    <%= spinner('tag') %>
    <%= submit_tag :close_button.t, :name => 'close' %>
  </div>

<% end %>

<%= javascript_tag "Form.focusFirstElement('edit_tag_form');" %>
