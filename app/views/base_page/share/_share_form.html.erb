<% type = 'send' if type.nil? -%>
<% notify = true if notify.nil? -%>
<% add_action = false if add_action.nil? %>
<% owner = false if owner.nil? %>

<div class='share_page'>
  <h2 class="first"><%= 'Share this page with:'[:share_page_recipients, page_class.downcase] %></h2>

  <div id='share_error_message'></div>

  <% if owner %>
    <dl>
    <dt><%= "Page Owner"[:page_create_owner] %></dt>
    <dd><%= select_tag 'page[owner]', options_for_page_owner %></dd>
    <dt><%= "Additional Access"[:page_create_access] %></dt>
    <dd>
  <% end %>

  <%= render :partial => 'base_page/share/add_recipient_widget', :locals => {:add_action => add_action} %>

  <% if owner %>
    </dl>
  <% end %>

  <% if notify %>
    <h2><%= 'Send Notification'[:notify_page_link] %></h2>
    <table class='notify'>
      <%= render :partial => 'base_page/share/notification_message_form' %>
    </table>
  <% end %>

</div>

