<% @title_box = capture do -%>
<%= link_to_breadcrumbs %>
<h1>
  <%= image_tag('/images/pages/big/%s' % @page_class.icon) %>
  <%= "Create a new".t %> <%= @page_class.class_display_name.t %>
</h1>
<% end -%>

<div class='create_page'>
<% form_tag(:action => 'create') do %>
  <%= hidden_field_tag 'page_class', @page_class %>
  <div class='left'>
    <h2 class='section'><%= 'Page information'[:create_page_information] %></h2>
    <%= render :partial => 'base_page/create/information' %>
  </div>
  <div class='right'>
    <h2 class='section'><%= 'Who has access to this page?'[:create_page_share] %></h2>
    <%= render :partial => 'share' %>
  </div>
  <div class='clear'></div>
<% end %>

  <div class='buttons'>
    <%= submit_tag '&laquo; ' + "Back".t, :name => 'cancel' %>
    <%= submit_tag "Create page".t + ' &raquo;', :name => 'create' %>
  </div>

</div>

