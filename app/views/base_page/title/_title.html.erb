<% if may_edit_title? -%>
<div class='float_right'>
  <%= link_to_remote_with_icon("Edit Title"[:edit_title], {:icon => 'pencil', :url => {:controller => 'base_page/title', :action => 'edit', :page_id => @page.id}}, {:class => 'shy'}) %>
</div>
<% end -%>
<h1>
  <%= icon_for @asset if @asset %>
  <%=h @page.title %>
  <%= content_tag(:span,@title_addendum) if @title_addendum %>
</h1>
<div class='summary'>
  <%=h @page.summary %>
</div>

