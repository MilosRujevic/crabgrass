<%
  #form.heading '{page_class} Information'[:create_page_information, "Page"[:page]]
  form.row do |r|
    r.label 'Title'[:title]
    r.label_for 'page_title'
    r.input text_field('page', 'title', :size => 40)
    r.info help(:title)
  end
  form.row do |r|
    r.label 'Summary'[:summary]
    r.label_for 'page_summary'
    r.input text_area('page', 'summary', :size => '40x3')
    r.info help(:summary)
  end
  form.row do |r|
    r.label 'Tags'[:tags]
    r.label_for 'page_tag_list'
    r.input text_field('page', 'tag_list', :size => 40)
    r.info "%s %s" % [help(:tags), 'Separate tags using commas'[:separate_tags]]
  end
%>

