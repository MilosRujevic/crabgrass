<% popup('Share This Page'[:share_this_page], :id => 'share_popup', :width => '40em') do -%>
  <% form_remote_tag(
    :url => {:controller => 'base_page/participation', :action => 'share', :page_id => @page.id},
    :loading => show_spinner('popup'),
    :html => {:id => 'share_page_form'}) do -%>

    <%= render :partial => 'base_page/share' %>

    <%= submit_tag :share_button.t, :name => 'share' %>
    <%= submit_tag :close_button.t, :name => 'cancel' %>
    <%= spinner 'popup' %>
  <% end -%>
<% end -%>

