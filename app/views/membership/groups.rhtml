<% content_for :style do -%>
table.members td {padding: 12px;}
<% end -%>

<%= render :partial => 'members_tabs', :locals => {:group => @group } -%>

<div>

<% if @group.federatings.any? %>
  <table class='members pretty'>
  <tr>
    <th>Group</th>
    <th>Joined</th>
  </tr>
  <%= render :partial => 'federating', :collection => @group.federatings %>
  </table>
<% end -%>

</div>

