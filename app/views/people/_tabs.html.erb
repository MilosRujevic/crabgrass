<% @title_box = content_tag(:h1, "Directory of Groups"[:directory_of_people]) -%>
<%- @info_box_class = 'tabs' -%>
<%- @info_box = capture do -%>
<%= Formy.tabs do |f|
  f.tab do |t|
    t.label 'my friends'[:my_contacts]
    t.url '/people/contacts'
    t.selected action?(:contacts)
  end
  f.tab do |t|
    t.label 'my peers'[:my_peers]
    t.url '/people/peers'
    t.selected action?(:peers)
  end
  f.tab do |t|
    t.label 'new people'[:new_people]
    t.url '/people'
    t.selected action?(:index)
  end
  f.tab do |t|
    t.label 'all people'[:all_people]
    t.url '/people/directory'
    t.selected action?(:directory)
  end
end %>
<%- end -%>


