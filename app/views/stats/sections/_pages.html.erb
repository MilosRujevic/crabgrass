<%
   @order = 20
   new_pages = pages_created
   new_pages_active = pages_created(:updated => true)
   updated_pages = pages_updated
%>

<%= section 'Pages' %>

<%= subsection 'New & Modified' %>

<%= time_series_chart(
  {:label => 'new pages', :data => new_pages},
  {:label => 'modified pages', :data => updated_pages}
#  {:label => 'new pages recently modified', :data => new_pages_active}
)%>

<%= subsection 'Total' %>

<%= time_series_chart(
  {:label => 'total pages', :data => cumulative(new_pages)},
  {:label => 'total pages recently modified', :data => cumulative(new_pages_active)}
)%>

