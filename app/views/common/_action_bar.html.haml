- if settings.present?
  %div#action-bar
    - if settings[:select].present?
      = render :partial => '/common/action_bar/select', :locals => {:settings => settings}
    - if settings[:mark].present?
      = render :partial => '/common/action_bar/mark', :locals => {:settings => settings}
    - if settings[:view].present?
      = render :partial => '/common/action_bar/view', :locals => {:settings => settings, :view_base_path => view_base_path}
