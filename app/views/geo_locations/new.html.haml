= form_tag geo_locations_url, :method => :post
%div
  = label_tag 'country', 'Country'
  = geo_locations_edit_country_dropdown
%div{:id => 'city_text', :style => 'float: none;'}
  = label_tag 'city', 'City'
  = text_field_tag 'city_name', @city_name, :id => 'city_text_field'
  %div#autocomplete_js
    = render :partial => '/locations/autocomplete_js', :locals => {:update_form_for => 'profile'}
  = hidden_field_tag 'geo_location[geo_place_id]', @location.try(:geo_place_id), :id => 'city_id_field'
  = hidden_field_tag 'profile_id', @profile.id.to_s
%div
  = submit_tag(I18n.t(:save_button), :name => 'save')
  = submit_tag(I18n.t(:cancel_button), :name => 'cancel')
