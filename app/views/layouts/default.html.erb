<% inside_layout 'simple_table' do -%>
<% if @title_box.any? -%>
<div class='title_box <%= @title_box_class %>'>
  <%= link_to_breadcrumbs %>
  <%= @title_box %>
</div>
<% end -%>
<% if @info_box.any? -%>
<div class='info_box <%= @info_box_class %>'>
  <%= @info_box %>
</div>
<% end -%>
<div class='content_box'>
  <%= yield %>
</div>
<% end -%>

