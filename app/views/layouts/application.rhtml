<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/ DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <%= render :partial => 'layouts/headmatter' %>
</head>

<body class="<%=body_class||=''%>">

<!-- begin #container -->
<div id="container">

<!-- begin #masthead -->
<div id="masthead">
  <%= render :partial => 'layouts/masthead' %>
</div>
<!--end #masthead -->

<% if banner -%>
<!-- begin #banner -->
<div id="banner">
  <%= render :partial => banner %>
</div>
<!-- end #banner -->
<% end -%>

<!-- begin #main -->
<div id="main">
  <div id="message">
    <%= display_messages %>
  </div>
  
  <%= yield %>

</div>
<!-- end #main -->

<!-- begin footer -->
<div id="footer">
<%= render 'layouts/footer' %>
</div>
<!-- end footer -->

</div> <!-- end #container -->

<%= yield :end_tags %>

</body>
</html>

