!!!
%html{:dir=>language_direction}
  = render :partial => '/layouts/base/head'
  %body{:class=>language_direction}
    %div#page
      %header.page
        =render :partial => '/layouts/base/header'
      %section#breadcrumb
        = render :partial => '/layouts/base/breadcrumb'
      %div#content
        %div#content-container
          %div#content-wrap

            /
            / extended sidebar for landing pages 
            /
            - unless yield :extended_sidebar
              /
              / full content width pages 
              /
              = render :partial => '/layouts/base/full_width_content'

            - else
              = render :partial => '/layouts/base/content_with_extended_sidebar'

            
      = render :partial => 'layouts/base/footer'
          

