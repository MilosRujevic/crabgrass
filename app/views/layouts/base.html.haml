!!!
%html{:dir=>language_direction}
  = render :partial => '/layouts/base/head'
  %body{:class=>language_direction}
    %div#page
      %header.page
        =render :partial => '/layouts/base/header'
      %section#breadcrumb
        = render :partial => '/layouts/base/breadcrumb'
      %div#content
        %div#content-container
          %div#content-wrap

            /
            / extended sidebar for landing pages (optional)
            /
            - if yield :extended_sidebar
              %aside#identity-info
                = yield :extended_sidebar

            /
            / banner placeholder
            /
            - if yield :banner
              = yield :banner

            /
            / same as banner?
            /
            - if yield :content_header
              = yield :content_header

            /
            / secondary nav (always required?)
            /
            - if yield :secondary_nav
              = yield :secondary_nav


            /
            / left sidebar (optional)
            /
            - if yield :left_sidebar
              %aside#sidebar
                = yield :left_sidebar

            /
            / main content here
            /
            %div#main-content
              = yield

            /
            / right sidebar
            /
            - if yield :right_sidebar
              %aside#sidebar
                = yield :right_sidebar
            
      = render :partial => 'layouts/base/footer'
          
