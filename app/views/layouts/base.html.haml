!!!
%html{:dir=>language_direction}
  = render :partial => '/layouts/base/head'
  %body{:class=>language_direction}
    %div#page
      %header.page
        =render :partial => '/layouts/base/header'
      %section#breadcrumb
        = render :partial => '/layouts/base/breadcrumb'
      %div#content
        %div#content-container
          %div#content-wrap
            - if yield :sidebar
              %aside#identity-info
                = yield :sidebar
            %div#main-content
              - if yield :banner
                = yield :banner
              = yield
      = render :partial => 'layouts/base/footer'
          
