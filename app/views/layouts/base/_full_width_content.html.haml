/
/ full content width
/
#content-container
  #banner-container
    %header#banner
      = yield :banner
    /
    / secondary nav (always required?)
    /
    - if yield :secondary_nav
      %nav#second-level
        = yield :secondary_nav

  /
  / secondary nav (always required?)
  /
  - if yield :third_nav
    #third-level-container
      %nav#third-level
        = yield :third_nav

  /
  / misc placeholder
  /
  - if yield :misc_header
    = yield :misc_header

  #content-wrap

    - if yield :right_sidebar

      %div#alpha10
        #main-content
          = yield
      %aside#sidebar
        = yield :right_sidebar

    - elsif yield :left_sidebar

      = yield :left_sidebar
      #main-content-right
        = yield

    - else

      #main-content-full
        = yield

