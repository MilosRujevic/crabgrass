- @networks = @group.networks
- @committees = @group.committees_for(@access) || []

- if((affiliations_count = @networks.size + @committees.size) > 0)
  %header
    %h4
      = I18n.t(:affiliations).downcase

  - if @networks.any?
    = render :partial => '/avatars/entity_list', :locals => { :collection => @networks.sort{|a,b| rand(3)-1}[0..4], :i18n_title => :networks, :caching => 'networks', :conditions => may_show_networks_of_group? }

  - if @committees.any?
    = render :partial => '/avatars/entity_list', :locals => { :collection => @committees.sort{|a,b| rand(3)-1}[0..4], :i18n_title => :committees, :caching => 'committees', :conditions => may_show_subcommittees_of_group? }

  - if @group.real_council
    = render :partial => '/avatars/entity_list', :locals => { :collection => [@group.council], :i18n_title => :coordinating_council, :caching => 'council', :conditions => may_show_subcommittees_of_group? }