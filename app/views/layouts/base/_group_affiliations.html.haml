%header
  %h3 
    =I18n.t(:affiliations)
  = totalize_with_link(@group, @group.users)

- if @group.networks.size > 0
  = render :partial => '/avatars/entity_list', :locals => { :collection => @group.networks, :i18n_title => :networks, :caching => 'networks', :conditions => may_show_networks_of_group? }

- if @group.committees_for(@access).size > 0
  = render :partial => '/avatars/entity_list', :locals => { :collection => @group.committees_for(@access), :i18n_title => :committees, :caching => 'committees', :conditions => may_show_subcommittees_of_group? }

= render :partial => '/avatars/entity_list', :locals => { :collection => [@group.real_council], :i18n_title => :council, :caching => 'council', :conditions => @group.real_council }
