- @networks = @group.networks
- @committees = @group.committees_for(@access) || []

- if((affiliations_count = @networks.size + @committees.size) > 0)
  %header
    %h4
      = I18n.t(:affiliations)
      %span
        %a
          = affiliations_count

  - if @networks.any?
    = render :partial => '/avatars/entity_list', :locals => { :collection => @networks, :i18n_title => :networks, :caching => 'networks', :conditions => may_show_networks_of_group? }

  - if @committees.any?
    = render :partial => '/avatars/entity_list', :locals => { :collection => @committees, :i18n_title => :committees, :caching => 'committees', :conditions => may_show_subcommittees_of_group? }
