- form_for @widget do |f|
  = yield :widget_fields
  %ul
    %li
      = f.label :title
      = f.text_field :title
    %li
      = f.label :entities
      = f.select :entities, ['Groups', 'Users']
    %li.checkbox-edit
      = f.check_box :recent
      = f.label :recent
      .info= I18n.t :networking_recently_active
  %div#mb-footer
    = f.submit
