<div class='tab-content tab-area' id="customize_masthead">
  <% form_for @appearance,:html => { :multipart => true }  do |f| %>
    <p> <%= "Upload an image for the masthead. It can't be taller than 80 pixels."[:upload_masthead_image_label] %></p>
    <p><%= display_masthead %></p>
    <%= f.label :masthead_asset_uploaded_data, "select image file"[:select_image_file] %>
    <br/>
    <%= f.file_field :masthead_asset_uploaded_data, :size => "73" %>
    <br/>
    <br/>
    <%= submit_tag 'Upload'.t, :class => "submit" %>
  <% end %>
</div>