<%= Formy.tabs do |f|
  f.tab do |t|
    t.label 'Masthead'.t
    t.show_tab 'customize_masthead'
    t.selected true
  end
  
  f.tab do |t|
    t.label 'Welcome Text'.t
    t.show_tab 'customize_welcome_text'
  end
  
  f.tab do |t|
    t.label 'Color Theme'.t
    t.show_tab 'customize_color_theme'
  end
  
  f.tab do |t|
    t.label 'Advanced'.t
    t.show_tab 'customize_advanced'
  end
end
%>