<% form_tag('/me/search/', :class => 'minisearch round') do %>
 <%= text_field_tag('search[text]', '', :class => 'minisearch_text round_left') %>
 <%= hidden_field_tag('search[group]', @group.id) if @group %>
 <%= hidden_field_tag('search[person]', @user.id) if @user %>
 <%= submit_tag 'search', :class => 'minisearch_submit round_right' %>
<% end %>

