<h1 id='create-title'>create a new page</h1>

<div id='listing-of-page-classes' class='workarea'>
<% @site.available_page_types.each_with_index do |page_class,i| -%>
<% page_class = Page.class_name_to_class(page_class) -%>
<div class="page-class"><div>
  <%= link_to "<b>#{page_class.class_display_name.t}</b>: #{page_class.class_description.t}",
    {:controller => 'tool/'+page_class.controller, :action => 'create',
     :id => page_class.class_display_name.nameize, :group_id => params[:group_id]},
    {:style => "background: url(/images/pages/big/#{page_class.icon}) no-repeat 0% 50%", :class => 'page-link'} %>
</div></div>
<% end -%>
</div>

