<div class="section">
  <table class="pretty">
    <tr>
      <th>
        <h2 class="alert"><%= I18n.t(:basic_info) -%></h2>
      </th>
    </tr>
    <tr class='even'>
      <td>
        <table cellpadding='8'>
          <tr>
            <td>
              <%= text_field 'profile', 'first_name', 'size' => 15, 'maxlength' => 100, 'style' => 'width:100%' %>
              <div class="input_label"><%= I18n.t(:first_name) %></div>
            </td>
            <td align="center">
              <%= text_field 'profile', 'middle_name', 'size' => 9, 'maxlength' => 100, 'style' => 'width:5em' %>
              <div class="input_label"><%= I18n.t(:middle_name) -%></div>
            </td>
            <td>
              <%= text_field 'profile', 'last_name', 'size' => 15, 'maxlength' => 100, 'style' => 'width:100%' %>
              <div class="input_label"><%= I18n.t(:last_name) -%></div>
            </td>
          </tr>
          <tr>
            <td colspan="3">
              <%= text_field 'profile', 'organization', 'size' => 40, 'maxlength' => 100, 'style' => 'width:100%' %>
              <div class="input_label"><%= I18n.t(:organization) -%></div>
            </td>
          </tr>
          <tr>
            <td colspan="3">
            <%= text_field 'profile', 'role', 'size' => 40, 'maxlength' => 100, 'style' => 'width:100%' %>
              <div class="input_label"><%= I18n.t(:organizational_role) -%></div>
            </td>
          </tr>
          <tr>
            <td colspan="3">
              <% @profile.geo_locations.each do |gl| %>
                <%= label_for_location(gl)+' '+link_to_modal('Edit Location', :url => edit_geo_location_path(gl)) %>
              <% end %>
              <div class="input_label"><%= I18n.t(:location) -%></div>
            </td>
          </tr>
        </table>
      </td>
    </tr>
  </table>
</div>

