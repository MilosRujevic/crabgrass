- options = options_for_task_list

%ul.tasks
  - @task_lists.each do |task|
    
    %li.task

      %p
        = link_to task.page.title, page_url(task.page)
        = "(#{link_to_entity(task.page.owner, :action => 'tasks')})" if task.page.owner
     
      %ul.task_list
        - @tasks = list_for_task(task, options)
        = render :partial => 'task_list_page/task', :collection => @tasks, :locals => {:sortable => false}
