<ul class='side_list commands'>
  <%= side_list_li :text => 'Home'[:menu_home], :url => ('/'+@group.name), :active => (params[:_context]==@group.name), :icon => 'house' %>
  <%# side_list_li :text => 'about'.t, :url => url_for_group(@group,:action => 'about'), :active => ..., :icon => 'info' %>
  <%= side_list_li :text => 'Search'[:search], :url => url_for_group(@group,:action => 'search'), :icon => 'magnifier' %>
  <%= side_list_li :text => 'Archive'[:archive], :url => url_for_group(@group, :action => 'archive'), :icon => 'book_open' %>
  <%= side_list_li :text => 'Tags'[:tags], :url => url_for_group(@group, :action => 'tags'), :icon => 'tag' %>
  <%= side_list_li :text => 'Tasks'[:tasks], :url => url_for_group(@group, :action => 'tasks'), :icon => 'page_tasks' %>
  <%= side_list_li :text => 'Discussions'[:discussions], :url => url_for_group(@group, :action => 'discussions'), :icon => 'page_discussion' %>
  <%- if group_member? and !committee? and current_site.chat? -%>
    <%= side_list_li :text => 'Join Chat'[:group_join_chat], :url => {:controller => 'chat', :action => 'channel', :id => @group.name}, :icon => 'chat' %>
  <%- end -%>
</ul>

