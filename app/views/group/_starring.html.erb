<% if (@featured_pages = @group.find_static).any? || current_user.may?(:admin,@group) %>
<hr class="thick" />
<h2 class="alert"><%= "Featured".t %><%= link_to("edit".t, group_url(:action => 'edit_featured_content', :id => @group), :style => "margin-left:20px; font-weight:normal;") if current_user.may?(:admin,@group)%></h2>
<%= render :partial => "featured_item", :collection => @featured_pages %>
<% end %>

<% if false and (@important_pages=@group.pages.find_by_path(['stars',@group.min_stars,'limit',7],options_for_group(@group))).any?%>
<hr class="thick" />
<h2 class="section"><%= "Popular".t %></h2>
<%= render :partial => "featured_item", :collection => @important_pages %>
<% end %>
