<% content_for :style do -%>
p#inbox_buttons {
  text-align: right;
}
<% end -%>
<% @title_box = capture do -%>
  Inbox of pages I am actively participating in or watching for changes.
<% end -%>

<%= render :partial => 'pages/search', :locals => {:users => @user.contacts, :groups => @user.groups, :show_extras => 'true', :url => url_for(:action => 'search')} %><br/>

<% form_tag({:controller => 'me/inbox', :action => 'update', :path => params[:path]}, {:id => 'inbox_form'}) do -%>  

<div class='pretty'>
<%= render :partial => 'pages/list/table', :locals => {:heading => true, :checkbox => true, 
    :columns => [:checkbox, :icon, :title, :group, :updated_by, :updated_at, :contributors]} %>

</div>

<p id='inbox_buttons'>
  <%= link_to_function 'Toggle Selection', "$$('.page_check').each(function(cb) {cb.checked = !cb.checked})" %>
  <%= submit_link 'Remove from inbox'.t, :name => 'remove' %> 
</p>
  
<% end # form -%>

<link rel="alternate" href="/me/inbox/rss" title="RSS Feed" type="application/rss+xml" />

