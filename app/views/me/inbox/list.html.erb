<% content_for :style do -%>
p#inbox_buttons {
  text-align: right;
}
<% end -%>
<% content_for :titlebox do -%>
<div id='titlebox'>Inbox of pages I am actively participating in or watching for changes.</div>
<% end -%>

<%= render :partial => 'pages/search', :locals => {:users => @user.contacts, :groups => @user.groups, :show_extras => 'true', :url => url_for(:action => 'search')} %>

<% form_tag({:controller => 'inbox', :action => 'index', :path => params[:path]}, {:id => 'inbox_form'}) do -%>  

<p>
<%= render :partial => 'pages/list/table', :locals => {:heading => true, :checkbox => true, 
    :columns => [:checkbox, :icon, :title, :group, :updated_by, :updated_at, :contributors]}
%>
</p>

<p id='inbox_buttons'>
  <%= function_button '[T]oggle selection'.t, "$('inbox_form').getInputs('checkbox').invoke('click')" %>  
  <%= submit_button '[R]emove from inbox'.t, :name => 'remove' %>  
</p>
  
<% end # form -%>

<link rel="alternate" href="/me/inbox/rss" title="RSS Feed" type="application/rss+xml" />

