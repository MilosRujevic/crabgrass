<% @public ||= @user.profiles.public -%>
<% @private ||= @user.profiles.private -%>
<%= Formy.tabs do |f|
  f.tab do |t|
    t.label 'User Preferences'[:user_preferences]
    t.link me_url(:action => 'edit', :id => nil)
    t.selected params[:action] == 'edit' && params[:controller] == '/me/base'
  end
  f.tab do |t|
    t.label 'Public Profile'[:public_profile]
    t.link url_for(:controller => '/profile', :action => 'edit', :id => @public.id)
    t.selected params[:controller] == '/profile' && params[:id] == @public.id.to_s
  end
  f.tab do |t|
    t.label 'Private Profile'[:private_profile]
    t.link url_for(:controller => '/profile', :action => 'edit', :id => @private.id)
    t.selected params[:controller] == '/profile' && params[:id] == @private.id.to_s
  end
end
%>
