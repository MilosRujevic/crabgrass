<% @login_form_already_rendered = true -%>
<% form_tag({:controller => 'account', :action => 'login'}, :id => "loginform") do -%>
<table>
<tr>
  <td>
    <div><label for="login"><%= "Login name"[:login_name] %></label></div>
    <div><%= text_field_tag 'login' %></div>
  </td>
</tr>
<tr>
  <td>
    <div><label for="password"><%= "Password"[:login_password] %></label></div>
    <div><%= password_field_tag 'password' %></div>
  </td>
</tr>
<tr>
  <td style="text-align: right">
     <div><%= submit_tag 'Log in'[:login_button] %></div>
  </td>
</tr>
<tr>
  <td>
    <div style='text-align:center'>
      <%- if false # Change to true if you want this functionality -%>
      <p><label for="remember_me">Remember me:</label>
      <%= check_box_tag 'remember_me' %></p>
      <%- end -%>
      <% if may_signup? %>
        <%#= link_to 'Need a new account?'[:signup_link], { :controller => '/account', :action => 'signup', :redirect => params[:redirect] } %>
        <%= link_to 'Need a new account?'[:signup_link], "http://mruyouthplatform.org/?page_id=55" } %>
        <br/>
      <% end %>
      <%= link_to 'I forgot my password'[:forgot_password_link], :controller => '/account', :action => 'forgot_password' %>
      <%= hidden_field_tag 'redirect', params[:redirect] %>
    </div>
  </td>
</tr>
</table>
<% end # form -%>

<%= javascript_tag "Form.focusFirstElement('loginform');" %>
<div><%# flash[:error] %></div>

