<p>
  <%= I18n.t(:private_info) %>
  <i> <%= I18n.t(:private_info_description) %></i>
</p>

<p>
  <%= user.label :email, I18n.t(:signup_email) %><br/>
  <%= required_field_mark %>
  <%= user.text_field :email %>
</p>
<% fields_for :hidden_profile, @hidden_profile do |profile| %>
  <p>
    <%= profile.label :birthday, I18n.t(:date_of_birth) %><br/>
    <%= required_field_mark %>
    <%= profile.date_select :birthday, :start_year => 1900, :end_year => 2009, :include_blank => true %>
  </p>
<% end %>