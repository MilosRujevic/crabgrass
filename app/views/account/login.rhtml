<table class="login"><tr>
  <td class="login"><%= render :partial => 'account/login_form_box' %></td>
  <td class="login">
    <h1><%=h I18n.t(:welcome_title, :site_title => current_site.title) %></h1>
    <p><%= format_text first_with_any(I18n.t(:welcome_login_message), I18n.t(:welcome_message)) %></p>
    <%- if current_site.signup_mode == Conf::SIGNUP_MODE[:invite_only] -%>
      <p><%=h :invite_only_message.t %></p>
    <%- end -%>
  </td>
</tr></table>

