<table class="login"><tr>
  <td class="login"><%= render :partial => 'account/login_form_box' %></td>
  <td class="login">
    <h1><%=h "Welcome to {site_title}"[:welcome_title, current_site.title] %></h1>
    <p><%= format_text first_with_any(:welcome_login_message.t, :welcome_message.t) %></p>
    <%- if current_site.signup_mode == Conf::SIGNUP_MODE[:invite_only] -%>
      <p><%=h :invite_only_message.t %></p>
    <%- end -%>
  </td>
</tr></table>

