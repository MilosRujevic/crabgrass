#daterange
  = form_tag('/admin/stats/pages')
  #startdate
    %span.subhead Starting
    %div.input_container
      %input{:type => 'text', :id => 'selected_start_date', :class => 'dateselect', :name => 'start_date', :size => 10, :value => h(@startdate)}
      %span{:class => 'small_icon calendar_edit_16', :id => 'startdate_pop'}
  #enddate
    %span.subhead Ending
    %div.input_container
      %input{:type => 'text', :id => 'selected_end_date', :name => 'end_date', :size => 10, :value => h(@enddate)}
      %span{:class => 'small_icon calendar_edit_16', :id => 'enddate_pop'}
  #submit
    = submit_tag('Go')

= javascript_tag add_calendar_js('startdate_pop', 'selected_start_date')
= javascript_tag add_calendar_js('enddate_pop', 'selected_end_date')
