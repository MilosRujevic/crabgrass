
<p>
  <%= link_to '%s home page' % @group.name, url_for_group(@group) %>
</p>

<table>
  <tr>
    <td>
  <b>Name:</b>
    </td>
   <td>
  <%=h @group.name %>
  </td>
</tr>

<tr>
<td>
 <b> Full name:</b>
</td>
<td>
  <%=h @group.full_name %>
</td>
</tr>
  <tr>
    <td>
      <b>Summary:</b>
    </td>
    <td>
      <%=h @group.summary %>
    </td>
  </tr>
  <tr>
    <td>
      <b>Created at:</b>
    </td>
    <td>
      <%=h @group.created_at %>
    </td>
  </tr>
  <tr>
    <td>
      <b>Updated at:</b>
    </td>
    <td>
      <%=h @group.updated_at %>
    </td>
  </tr>
  <tr>
    <td>
      <b>Memberships:</b>
    </td>
    <td>
      <%= @group.users.collect{|u| link_to u.login, user_path(u) }.join(' ') %>
    </td>
  </tr>
  <tr>
    <td colspan=2>
      <%= link_to 'Edit', edit_group_path(@group) %> |
      <%= link_to 'Back', groups_path %>
    </td>
  </tr>
</table>
