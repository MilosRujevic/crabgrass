<h2>Basic settings</h2>

<% form_for current_site, :url => {:action => 'update'} do |f| %>
<%= f.error_messages %>
<span>
  <b>Signup Mode:</b>
</span>
<br />
<span>
  <%= f.check_box :signup_mode, :value => 1 %><%= label :default, 'default:' %>&nbsp;if checked, we track user visits, logins and page views
</span>
<br />
<span>
  <%= f.check_box :signup_mode, :value => 2 %><%= label :closed, 'closed' %>&nbsp;if checked, chat is enabled
</span>
<br />
<span>
  <%= f.check_box :signup_mode, :value => 3 %><%= label :invite_only, 'invite_only:' %>&nbsp;if checked, exceptions are shown to the user
</span>
<br />
<span>
  <%= f.check_box :require_user_email %><%= label :require_user_email, 'require_user_email:' %>&nbsp;if checked, cookies will only work over tls/ssl
</span>
<br /><br />
<span><%= submit_tag 'Save', :style => 'width:7em;' %></span>
<br /><br />
<% end %>
