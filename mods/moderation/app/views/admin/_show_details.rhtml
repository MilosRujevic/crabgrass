<td>
<a href='#' class='tooltip small_icon info_16'>
<span>
  <% details = flags_for_details(@page.id, obj_type) %>
  <% details.each do |detail| %>
    <strong>Flagged By:</strong> <%= detail.user_login %>  <strong>Reason:</strong> <%=h detail.reason_flagged %><br>
    <% unless detail.comment.empty? %>
      <%= "<strong>Comment:</strong> #{detail.comment}" %>
    <% end %>
    <% unless detail == details.last %>
      <%= '<hr>' %>
    <% end %>
  <% end %>
</span>
</a>
</td>
