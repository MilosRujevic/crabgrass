!!!
%html{:dir=>language_direction}
  %head
    %meta{ :name=>"description", :content=>""}
    %meta{ :name=>"keywords", :content=>""}
    %meta{"http-equiv"=>"Content-Type", :content=>"application/xhtml+xml;charset=utf-8"}
    =favicon_link
    %title
      =h title_from_context
    / begin styling 
    = crabgrass_stylesheets("ui_base")
    / end styling
    / begin scripts
    = crabgrass_javascripts
    / end scripts
    = call_hook :html_head
    = yield :html_head
  %body{:class=>language_direction}
    %section#page
      %header.page
        =render :partial => 'layouts/ui_header'
      %section#content
        %section#content-container
          %section#group-content-wrap
            %aside#group-info
              =render :partial => 'layouts/ui_group_sidebar'
            %section#group-content
              =render :partial => 'layouts/ui_group_content'
      %footer.page
        footer