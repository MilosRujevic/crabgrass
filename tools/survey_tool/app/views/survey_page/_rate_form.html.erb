<table>
<!-- ratings row -->
<tr>
  <td id="current_rating">
    <%= render :partial => 'current_rating', :locals => { :resp => @response } %>
  </td>
  <td id="your_rating">
  	<h3 class='alert'>Your Rating Of This Response</h3>
    <div class="rate_bar round">
      <%= render :partial => 'rating_bar' %>
    </div>

    <%= @survey_notice %>
    <%= link_to_remote("Skip To Next"[:survey_skip_next]+ARROW, js_next_response_options(@rating)) %>
  </td>
</tr>
<tr><td colspan='2'>&nbsp;</td></tr>
<!-- survey data row -->
<tr>
  <td id="user_info">
    <%= render :partial => 'user_info', :locals => { :resp => @response} %>
  </td>

  <td id="response">
    <%= render :partial => 'response', :locals => {:resp => @response, :rating => @rating} %>
  </td>
</tr>
</table>

