<br /><h2 class="bright">Next Up</h2><br />
<%# javascript_tag "$('next_ids').value = '#{responses.map(&:id).to_json}';" %>
<% responses.each do |resp| -%>
  <% if resp.user %>
    <div class="big_icon" style="background-image: url(<%= avatar_url_for(resp.user, 'medium') %>)">
      <%= "survey response by {login}"[:response_by_login,  
        {:login => resp.user.login}] %>
    </div>
  <% else %>
    <div class="big_icon page_survey_48">
      <%= "survey response by {login}"[:response_by_login, {:login => (resp.name||resp.email||'unknown')}] %>
    </div>
  <% end %>
<% end -%>
