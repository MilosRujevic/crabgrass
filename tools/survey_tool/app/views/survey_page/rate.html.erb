<%= render :partial => 'tabs' %>

<div id="rate_survey_container">
  <div id="left">
    <div id="current_rating">
      <%= render :partial => 'current_rating', :locals => { :resp => @resp } %>
    </div>
    <div id="user_info" style="border:solid 2px black; padding:1.5em;">
      <%= render :partial => 'user_info', :locals => { :resp => @resp} %>
    </div>
  </div>
  <div id="center">
    <span>
      <%= spinner('next_response') %>
      <h2 id="survey_notice" class="dim"><%= @survey_notice %></h2>
      <%= link_to_remote("next"[:next], js_next_response_options(0),
                         :id => 'next_response_link') %>
    </span>
    <div class="rate_bar round">
      <% form_tag(:controller => 'survey_tool', :action => 'rate') do -%>
	<span class="not"><%= "NOT" %></span>
	<%= hidden_field_tag(:response, @resp.id, :id => 'response_id') %>
	<%= hidden_field_tag(:next, @next.map(&:id).to_json, :id => 'next_ids') %>
	<% 1.upto(10) do |i| -%>
	  <%= radio_button_tag(:rating, i, false, :class => "rate_button",
                               :onClick => js_next_response(i)) %>
	  <%= label(:answer, :rating, i.to_s, :class => "rate_button") %>
	<% end -%>
	<span class="hot"><%= "HOT" %></span>
      <% end -%>
    </div>
    <div id="response">
      <%= render :partial => 'response', :locals => {:resp => @resp, :rating => @rating} %>
    </div>
  </div>
  <div id="right">
    <h2 class="bright">Next Up</h2>
    <br />
    <div id="next_responses">
      <%= render :partial => 'next_responses', :locals => {:responses => @next} %>
    </div>
  </div>
</div>
