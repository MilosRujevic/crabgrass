<%- @info_box_class = 'tabs' -%>
<%- @info_box = capture do -%>
<%= Formy.tabs do |f|
  f.tab do |t|
    t.label "Show"[:show]
    t.url page_url(@page,:action=>'show')
    t.selected action?(:show) && !controller?(:wiki_page_version)
    t.class 'page_url'
  end
  if logged_in? and current_user.may?(:edit, @page)
    f.tab do |t|
      if !locked_for_me?
        t.label "Edit"[:edit]
        t.url page_url(@page,:action => 'edit')
      else
        t.label "Break Lock"[:break_lock]
        t.url page_url(@page,:action => 'edit', :break_lock => true)
      end
      t.selected action?(:edit)
      t.class 'page_url'
    end
      # f.tab do |t|
      #   t.link link_to('Break Lock'[:break_lock], page_url(@page, :action => 'edit', :break_lock => true), :class => 'page_url')
      #   t.url page_url(@page,:action=>'edit')
      #   t.selected action?(:edit)
      #   t.class 'page_url'
      # end
  end
  last_change_id = "#{@wiki.version.to_i-1}-#{@wiki.version}"
  f.tab do |t|
    t.label "Versions"[:versions]
    t.url page_url(@page,:action=>'version-list')
    t.selected controller?(:wiki_page_version) && !(action?(:diff) && params[:id] == last_change_id)
    t.class 'page_url'
  end
  if @wiki.version > 1
    f.tab do |t|
      t.label "Last Change"[:last_change]
      t.url page_url(@page, :action=>'version-diff', :id => last_change_id)
      t.selected controller?(:wiki_page_version) && action?(:diff) && params[:id] == last_change_id
      t.class 'page_url'
    end
  end
  f.tab do |t|
    t.label "Print"[:print]
    t.url page_url(@page,:action=>'print')
    t.class 'page_url'
  end
end -%>
<%- end -%>
