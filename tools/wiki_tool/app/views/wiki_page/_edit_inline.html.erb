<% if @wiki_inline_error %>
  <blockquote class="error"><%=h @wiki_inline_error %></blockquote>
<% end %>

<% rows = [word_wrap((text||""), 80).count("\n")+4, 30].min %>
<% form_remote_tag :loading => show_spinner('save'), 
  :url => page_xurl(@page, :action => 'save_inline', :id => heading) do -%>
  <div class='fieldset'>
    <%= text_area_tag 'body', text, :rows => rows, :cols => 60, :style => 'width:99%;'  %>
    <%= formatting_reference_link %>
    <div>
      <%= submit_tag("Save", :name => 'save') unless @wiki_inline_error %>
      <%= submit_tag 'Cancel', :name => 'cancel' %>
      <%= spinner('save') %>
    </div>
  </div>
<% end %>

