<blockquote>
<%= @page.summary %>

<p>
<% if @link -%>
<%= "This request is: :status.".t[:request_status] % {
  :status => content_tag(:b, @link.resolved? ? I18n.t(:status_resolved) : I18n.t(:status_pending))} -%>
}
<% end -%>
</p>


<p>
<% if @link and current_user.may?(:admin, @link) -%>
<%= link_to I18n.t(:approve_or_reject_link), page_url(@link) -%>
<% end -%>
</p>

</blockquote>
