<blockquote>
<%= @page.summary %>

<p>
<% if @link -%>
<%= "This request is: :status.".t[:request_status] % {
  :status => content_tag(:b, @link.resolved? ? 'resolved'[:status_resolved] : 'pending'[:status_pending])} -%>
}
<% end -%>
</p>


<p>
<% if @link and current_user.may?(:admin, @link) -%>
<%= link_to 'approve or reject this request'[:approve_or_reject_link], page_url(@link) -%>
<% end -%>
</p>

</blockquote>
