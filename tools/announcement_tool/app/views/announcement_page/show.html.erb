<%=
Formy.tabs do |f|
  f.tab do |t|
    t.label 'show'.t
    t.link page_url(@page)
    t.selected action?(:show)
  end
  f.tab do |t|
    t.label 'edit'.t
    t.link page_url(@page, :action => 'edit')
    t.selected action?(:edit)
  end
end + '<br/>'
%>
<div class='wiki'>
  <div id='wiki_html'>
    <%= @wiki.body_html %>
  </div>
  <br style='clear:both' />
</div>

