#gallery-navigation{:align => 'right'}
  %ul
    %li= link_to(image_tag('/images/png/16/grey-arrow-up.png'), page_url(@page,:action=>'show') )
    - if @previous
      %li= link_to_remote(image_tag('/images/png/16/grey-arrow-left.png'), :url => page_url(@page, :action => 'image-show', :id => @previous.asset_id), :class => 'previous button' )
    - if @next
      %li= link_to_remote(image_tag('/images/png/16/grey-arrow-right.png'), :url => page_url(@page, :action => 'image-show', :id => @next.asset_id), :class => 'next button') 