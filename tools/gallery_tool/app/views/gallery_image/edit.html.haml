= Formy.tabs do |tabs|
  - tabs.tab do |tab|
    - tab.label I18n.t :media_image
    - tab.show_tab 'image-tab'
    - tab.selected true
  - tabs.tab do |tab|
    - tab.label I18n.t :media_audio
    - tab.show_tab 'audio-tab'
    - tab.selected false
    %h2.big_icon.page_gallery_48.title
      = I18n.t :edit_image_header

#image-tab.tab_content
  #update_message{:style => "color: red;"}
  #show-image= render :partial => 'show_image', :locals => {:size => 'medium', :no_link => true}
  #upload-new-image
    = render_image_form_with_progress
  %div.gallery_item
    = image_title @image

#audio-tab.tab_content{:style => 'display:none;'}
  = render :partial => 'gallery_audio/edit'

= render :partial => 'close_and_reload_button'
